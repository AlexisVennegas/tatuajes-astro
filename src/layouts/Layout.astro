/* WRAPPER */
.wrapper {
    width: 100%;
    height: 100vh;
    background-color: #000;
}

/* HEADER */
header {
    position: relative;
    z-index: 33;
    width: 100%;
    height: 10%;
    display: flex;
    box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    background-color: rgba(255, 255, 255, 0.336);
}

.img-container {
    width: 20%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.logo-header {
    height: 60px;
    view-transition-name: image-icon;
}
.menu {
    width: 80%;
    height: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.ul-menu-header {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
li {
    list-style: none;
    margin-top: 10px;
}
li > a {
    text-decoration: none;
    color: white;
    font-size: 2rem;
    font-family: 'Jim Nightshade', cursive;
    transition: .3s;
    margin-top: 12px;
}
li > a:hover {
    color: red;
    transition: .3s;
}

/* video */
.video-container {
    width: 100%;
    height: 90%;
    z-index: -1;
}
.video-background {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;    
    height: 100%;
    object-fit: cover;
    filter: brightness(0.3);
}
